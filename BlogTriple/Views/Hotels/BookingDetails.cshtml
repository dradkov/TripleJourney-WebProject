@model BlogTriple.Models.Hotels.BookedHotel

@{
    ViewBag.Title = "BookingDetails";
}

<h2 >You Have Successfully Booked a Jorney at @Model.Town</h2>


<div class="row mt-60">
    <div class="col-md-4">
        <img src="@Model.ImageUrl" class="img-responsive">
    </div>
    <div class="col-md-4">
        <h2 class="hotel-details">Hotel @Model.Name   </h2>
        <h3>@Model.Stars Stars </h3>

    </div>
    <div class="col-md-4">
        <p class="lead">
            From - @Model.From <br />
            To - @Model.To <br />
            Rooms - @Model.Rooms <br/>

            Total Price - @Model.Price €
        </p>

        <footer class="pull-right">

            @Html.ActionLink("OK", "Index", "Article", null, new { @class = "btn btn-default btn-xs" })
        </footer>
    </div>
</div>


