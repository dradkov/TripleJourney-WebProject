@model BlogTriple.Models.RegisterViewModel
@{
    ViewBag.Title = "PlaneTickets";
}

<div class="container body-content span = 8 offset = 2">
    <form class="form-horizontal" style="background-color: gray; margin: 10%">
        <fieldset>
            <div class="form-group">
                <label class="col-md-2 control-label">Тип билет</label>
                <div class="col-md-5">
                    <div class="radio">
                        <label>
                            <input type="radio" name="optionsRadios" id="optionsRadios1" value="option1" checked="">
                            Еднопосочен
                        </label>
                        <label style="margin-left: 2%">
                            <input type="radio" name="optionsRadios" id="optionsRadios2" value="option1" checked="">
                            Двупосочен
                        </label>
                    </div>
                </div>
            </div>



            <div class="form-group">
                <label class="col-md-2 control-label">От:</label>
                <div class="col-md-5">
                    <input type="text" class="form-control" id="startDestination">
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-2 control-label">До:</label>
                <div class="col-md-5">
                    <input type="text" class="form-control" id="inputPassword">
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-2 control-label">Отиване</label>
                <div class="col-md-5">
                    <input type="date" class="form-control">
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-2 control-label">Връщане</label>
                <div class="col-md-5">
                    <input type="date" class="form-control">
                </div>
            </div>


            <div class="form-group">
                <label for="select" class="col-lg-2 control-label">Пътници</label>
                <div class="col-lg-10">
                    <select class="form-control" id="select">
                        <option>1</option>
                        <option>2</option>
                        <option>3</option>
                        <option>4</option>
                        <option>5</option>
                        <option>6</option>
                        <option>7</option>
                    </select>
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-10 col-lg-offset-2">
                    <button type="reset" class="btn btn-default">Cancel</button>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </div>

        </fieldset>
    </form>
</div>

